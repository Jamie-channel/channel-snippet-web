{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./build",
    "lib": [
      "dom",
      "es6"
    ],
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "Storybook/*": ["storybook/*"],
      "Components/*": ["src/components/*"],
      "Constants/*": ["src/constants/*"],
      "Containers/*": ["src/containers/*"],
      "Contexts/*": ["src/contexts/*"],
      "Hooks/*": ["src/hooks/*"],
      "Styles/*": ["src/styles/*"],
      "Utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/files.d.ts",
    "src/index.ts"
  ]
}
