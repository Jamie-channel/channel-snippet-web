{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "lib": [
      "dom",
      "es6"
    ],
    "baseUrl": "./",
    "paths": {
      "Storybook/*": ["storybook/*"],
      "Components/*": ["src/components/*"],
      "Constants/*": ["src/constants/*"],
      "Containers/*": ["src/containers/*"],
      "Contexts/*": ["src/contexts/*"],
      "Styles/*": ["src/styles/*"],
      "Utils/*": ["src/utils/*"],
    }
  }
}
